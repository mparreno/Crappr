/***********
 * Stars *
 ***********/

.star-rating, .star-rating .current-rating, .star-rating span
{ background: url(<%= asset_path 'star.png' %>) left -1000px repeat-x; }
.star-rating{
	position:relative;
	width:125px;
	height:25px;
	overflow:hidden;
	list-style:none;
	margin:0;
	padding:0;
	background-position: left top;
}
.star-rating li { display: inline; }
.star-rating .current-rating{
	position:absolute;
	top:0;
	left:0;
	text-indent:-1000em;
	height:25px;
	line-height:25px;
	outline:none;
	overflow:hidden;
	border: none;
}
.star-rating span.stars-1{ width:20%; z-index:6; }
.star-rating span.stars-2{ width:40%; z-index:5; }
.star-rating span.stars-3{ width:60%; z-index:4; }
.star-rating span.stars-4{ width:80%; z-index:3; }
.star-rating span.stars-5{ width:100%; z-index:2; }
.star-rating .current-rating{ z-index:1; background-position: left center; }

.clear { clear:both; }
.left { float:left; }
.right { float:right; }

/***********
 * Listview *
 ***********/

.listview { margin-left: 0px; list-style: none; padding: 0; }

	.listview .listview-container {
		display: block;
		margin: 0;
		position: relative;
		overflow: visible;
		text-align: left;
		border-width: 0;
		border: 1px solid gray;
		background: #ffffff;
	}
	
	.listview .top {
		moz-border-radius-topleft: .6em;
		-webkit-border-top-left-radius: .6em;
		border-top-left-radius: .6em;
		-moz-border-radius-topright: .6em;
		-webkit-border-top-right-radius: .6em;
		border-top-right-radius: .6em;
	}
	.listview .bottom {
		moz-border-radius-bottomleft: .6em;
		-webkit-border-bottom-left-radius: .6em;
		border-bottom-left-radius: .6em;
		-moz-border-radius-bottompright: .6em;
		-webkit-border-bottom-right-radius: .6em;
		border-bottom-right-radius: .6em;
	}
	
	.listview .listview-container .inner{
		display: block;
		position: relative;
		padding: 0;
	}
	
	.listview .listview-container .inner .text{
		text-align: left;
	}
	
	.listview .listview-container .inner .text a{
		padding: .7em 35px .7em 15px;
		display: block;
	}
	
	.listview .listview-container .listview-text {
		padding: .7em 35px .7em 15px;
	}
	
	.listview .listview-container .inner .text h3{
		line-height: 15px;
		font-size: 14px;
		font-weight: bold;
		display: block;
		margin: 0em 0;
		text-overflow: ellipsis;
		overflow: hidden;
	}
	.listview .listview-container .inner .text .desc{
		font-size: 12px;
		font-weight: normal;
		display: block;
		margin: -.5em 0 .6em;
		text-overflow: ellipsis;
		overflow: hidden;
		white-space: nowrap;
	}
	
	.listview .listview-container  .arrow {
		right: 10px;
		position: absolute;
		top: 50%;
		margin-top: -9px;
		width: 18px;
		height: 18px;
		background: #666;
		background: rgba(0, 0, 0, .4);
		background-image: url(<%= asset_path 'icons.png' %>);
		background-repeat: no-repeat;
		-moz-border-radius: 9px;
		-webkit-border-radius: 9px;
		border-radius: 9px;
		background-position: -108px 50%;
	}
	
	div.input {
		margin-left: 79px;
	}
	
	label {
		width: 50px;
	}
	
